{
  "name": "TJ Volume Mixer",
  "description": "Individual volume control for each chrome tab",
  "version": "1.1.0",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "TJ Volume Mixer"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "logo/logo-16.png",
    "48": "logo/logo-48.png",
    "128": "logo/logo-128.png"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}
